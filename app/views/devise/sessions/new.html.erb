<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Login</h3>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              
              <div class="field form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control form-control-lg' %>
              </div>

              <div class="field form-outline mb-4">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'form-control form-control-lg' %>
              </div>

              <div class="actions form-outline mb-4">
                <%= f.submit "Login", class: 'btn btn-primary btn-lg btn-block' %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %> 

          </div>
        </div>
      </div>
    </div>
  </div>
</section>